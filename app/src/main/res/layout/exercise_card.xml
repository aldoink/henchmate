<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:background="@android:color/white"
    android:hapticFeedbackEnabled="false"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/exerciseHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/squats"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setRepInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/exerciseHeader"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/set"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_button"
        android:text="@string/five"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/set2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseHeader" />

    <Button
        android:id="@+id/set2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/circle_button"
        android:text="@string/five"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/set"
        app:layout_constraintEnd_toStartOf="@+id/set3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/set"
        app:layout_constraintTop_toTopOf="@+id/set" />

    <Button
        android:id="@+id/set3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/circle_button"
        android:text="@string/five"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/set2"
        app:layout_constraintEnd_toStartOf="@+id/set4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/set2"
        app:layout_constraintTop_toTopOf="@+id/set2" />

    <Button
        android:id="@+id/set4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/circle_button"
        android:text="@string/five"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/set3"
        app:layout_constraintEnd_toStartOf="@+id/set5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/set3"
        app:layout_constraintTop_toTopOf="@+id/set3" />

    <Button
        android:id="@+id/set5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/circle_button"
        android:text="@string/five"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/set4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/set4"
        app:layout_constraintTop_toTopOf="@+id/set4" />


</android.support.constraint.ConstraintLayout>
